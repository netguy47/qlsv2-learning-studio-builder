# Vercel Environment Variables
# Copy these to your Vercel project settings

# API Configuration
VITE_API_BASE_URL=https://your-backend-url.com

# OpenAI API Key (if needed)
OPENAI_API_KEY=your_openai_key_here

# Pollinations API Key (if needed)
POLLINATIONS_API_KEY=your_pollinations_key_here

# 1min.ai API Key (for enhanced TTS, music generation, image variations)
ONE_MIN_AI_API_KEY=your_1minai_api_key_here

# TTS Configuration
# Options: gtts, oneminai
TTS_PROVIDER=gtts

# Flask Server Configuration
FLASK_PORT=5000
FLASK_ENV=production

# Image Generation Configuration
SLIDES_IMAGE_PROVIDER=pollinations
INFOGRAPHIC_IMAGE_PROVIDER=pollinations
INFOGRAPHIC_MODE=img

# Performance
CACHE_TTL=3600
