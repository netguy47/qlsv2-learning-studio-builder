# Netlify Environment Variables
# Copy these to your Netlify site settings > Environment variables

# API Configuration - Update with your backend URL
VITE_API_BASE_URL=https://your-backend-app-name.onrender.com

# OpenAI API Key (if needed for DALL-E images)
OPENAI_API_KEY=your_openai_api_key_here

# Pollinations API Key (optional, free tier available)
POLLINATIONS_API_KEY=your_pollinations_key_here

# 1min.ai API Key (for enhanced TTS, music generation, image variations)
ONE_MIN_AI_API_KEY=your_1minai_api_key_here

# TTS Configuration
# Options: gtts, oneminai
TTS_PROVIDER=gtts

# Flask Server Configuration (for backend deployment)
FLASK_PORT=5000
FLASK_ENV=production

# Image Generation Configuration
SLIDES_IMAGE_PROVIDER=pollinations
INFOGRAPHIC_IMAGE_PROVIDER=pollinations
INFOGRAPHIC_MODE=img

# Performance
CACHE_TTL=3600

# Build Information (automatically set by Netlify)
NETLIFY=true
BRANCH=your_branch_name
CONTEXT=production
URL=https://your-site-name.netlify.app
