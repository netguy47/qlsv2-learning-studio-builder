# Flask Server Configuration
FLASK_PORT=5000
FLASK_ENV=development

# AI Provider API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=optional_for_dalle_and_text_generation
POLLINATIONS_API_KEY=optional
ONE_MIN_AI_API_KEY=your_1minai_api_key_here

# TTS Configuration
# Options: gtts, oneminai
TTS_PROVIDER=gtts

# Text Generation Configuration
LONGFORM_PROVIDER=pollinations
OPENAI_MODEL=gpt-4o-mini

# Text Generation Providers:
# - pollinations: Free, no API key required, good quality
# - openai: Requires OPENAI_API_KEY, uses GPT-4 models, higher quality but paid

# Image Generation Configuration
INFOGRAPHIC_IMAGE_PROVIDER=pollinations
INFOGRAPHIC_MODE=svg

# Infographic Modes:
# - svg: Data-driven SVG infographics (guaranteed to show your data)
# - ai: AI-generated images (artistic but may not reflect data accurately)
# - hybrid: Try AI first, fallback to SVG on failure

# Performance Tuning
CACHE_TTL=3600
MAX_CONCURRENT_IMAGE_GENERATION=3

# Visual Theme (Optional)
# VISUAL_FONT_FAMILY=Poppins, 'Trebuchet MS', sans-serif
# VISUAL_BG_PRIMARY=#0b1220
# VISUAL_BG_SECONDARY=#0f1b34
# VISUAL_BG_CARD=#162642
# VISUAL_ACCENT_PRIMARY=#22d3ee
# VISUAL_ACCENT_SECONDARY=#f59e0b
# VISUAL_ACCENT_TERTIARY=#fb7185
# VISUAL_TEXT_PRIMARY=#f8fafc
# VISUAL_TEXT_SECONDARY=#cbd5f5
# VISUAL_TEXT_MUTED=#8aa0c2
# VISUAL_DIVIDER=#243b5c

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Feature Flags
ENABLE_CACHING=true
ENABLE_PARALLEL_GENERATION=true
